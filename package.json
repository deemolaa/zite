{
  "name": "root",
  "version": "0.4.0",
  "private": true,
  "license": "BSD-3-Clause-Clear",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": ["app/*"],

  "scripts": {
    "postinstall": "npm -w @fhevm/sdk run build",
    "chain": "pnpm hardhat:chain",
    "compile": "pnpm hardhat:compile",
    "deploy:localhost": "pnpm hardhat:deploy && pnpm generate",
    "deploy:sepolia": "pnpm hardhat:deploy:sepolia && pnpm generate",
    "fork": "pnpm hardhat:fork",
    "format": "pnpm next:format && pnpm hardhat:format",
    "sdk:build": "pnpm --filter ./app/fhevm-sdk build",
    "sdk:watch": "pnpm --filter ./app/fhevm-sdk watch",
    "sdk:test": "pnpm --filter ./app/fhevm-sdk test",
    "sdk:test:watch": "pnpm --filter ./app/fhevm-sdk test:watch",
    "sdk:clean": "pnpm --filter ./app/fhevm-sdk clean",
    "generate": "ts-node ./scripts/generateTsAbis.ts",
    "hardhat:chain": "pnpm --filter ./app/hardhat chain",
    "hardhat:check-types": "pnpm --filter ./app/hardhat check-types",
    "hardhat:clean": "pnpm --filter ./app/=====0 clean",
    "hardhat:compile": "pnpm --filter ./app/hardhat compile",
    "hardhat:deploy": "pnpm --filter ./app/hardhat deploy:localhost",
    "hardhat:deploy:sepolia": "pnpm --filter ./app/hardhat deploy:sepolia",
    "hardhat:format": "pnpm --filter ./app/hardhat prettier:write",
    "hardhat:generate": "pnpm --filter ./app/hardhat typechain",
    "hardhat:hardhat-verify": "pnpm --filter ./app/hardhat verify",
    "hardhat:lint": "pnpm --filter ./app/hardhat lint",
    "hardhat:lint-staged": "pnpm --filter ./app/hardhat lint",
    "hardhat:test": "pnpm --filter ./app/hardhat test",
    "hardhat:verify": "pnpm --filter ./app/hardhat verify",
    "hardhat:verify:sepolia": "pnpm --filter ./app/hardhat verify:sepolia",
    "lint": "pnpm next:lint && pnpm hardhat:lint",
    "next:build": "pnpm --filter ./app/nextjs build",
    "next:check-types": "pnpm --filter ./app/nextjs check-types",
    "next:format": "pnpm --filter ./app/nextjs format",
    "next:lint": "pnpm --filter ./app/nextjs lint",
    "next:serve": "pnpm --filter ./app/nextjs serve",
    "precommit": "lint-staged",
    "preinstall": "pnpm sdk:build",
    "start": "pnpm --filter ./app/nextjs dev",
    "test": "pnpm hardhat:test",
    "vercel": "pnpm --filter ./app/nextjs vercel",
    "vercel:login": "pnpm --filter ./app/nextjs vercel:login",
    "vercel:yolo": "pnpm --filter ./app/nextjs vercel:yolo",
    "verify": "pnpm hardhat:verify",
    "verify:sepolia": "pnpm hardhat:verify:sepolia"
  },
  "dependencies": {
    "hardhat-deploy": "^0.11.45"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "esbuild",
      "keccak",
      "protobufjs",
      "secp256k1",
      "sharp",
      "unrs-resolver",
      "utf-8-validate",
      "yarn"
    ]
  }
}