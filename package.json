{
  "name": "root",
  "private": true,
  "version": "0.3.0",
  "license": "BSD-3-Clause-Clear",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "app/*"
  ],
  "scripts": {
    "postinstall": "./scripts/deploy-hardhat-node.sh",
    "dev:mock": "npx -w ./app/frontend npm run dev:mock",
    "generate-abi": "node ./scripts/generate-site-abi.mjs",
    "is-hardhat-node-running": "node ./scripts/is-hardhat-node-running.mjs",
    "hardhat-node": "npx -w ./app/contract hardhat node --verbose",
    "deploy:sepolia": "npx -w ./app/contract hardhat deploy --network sepolia",
    "deploy:hardhat-node": "npm run is-hardhat-node-running && npx -w ./app/contract hardhat deploy --network localhost"
  },
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "typechain": "^8.3.2"
  }
}
